<h1>人氣餐廳</h1>
<hr>
{{#each restaurants}}
<div class="card mb-3">
  <div class="card-body row">
    <div class="col-md-4"><img src="{{this.image}}" alt="{{this.name}}" style="width: 200px;"></div>
    <div class="col-md-8">
      <h3>{{this.name}}</h3>
      <div class="mb-2"><span class="badge badge-secondary">收藏人數：{{this.FavoritedCount}}</span></div>
      <a href="/restaurants/{{this.id}}" class="btn btn-primary">Show</a>
      {{#if this.isFavorited }}
      <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: inline-block"><button
          type="submit" class="btn btn-danger">移除最愛</button></form>
      {{else}}
      <form action="/favorite/{{this.id}}" method="POST" style="display: inline-block"><button type="submit"
          class="btn btn-primary">加到最愛</button>
      </form>
      {{/if}}
    </div>
  </div>
</div>
{{/each}}