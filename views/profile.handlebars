<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{logUser.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <p>{{logUser.name}}</p>
    <p>{{logUser.email}}</p>
    <p>已評論{{totalComments}}次</p>
    {{#ifCond user.id kk}}<a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>{{/ifCond}}
  </div>
  <div class="col-md-12 mt-3">
    <div class="card">
      <h5 class="card-header">已評論{{totalComments}}次</h5>
      <div class="card-body">
        {{#each logUser.Comments}}
        <a href="/restaurants/{{this.Restaurant.id}}" class="mr-2"><img src="{{this.Restaurant.image}}"
            alt="{{this.Restaurant.name}}" style="width: 50px; height: 50px;"></a>
        {{/each}}
      </div>
    </div>
  </div>
  <hr>
</div>
<br />
